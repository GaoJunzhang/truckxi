@import 'style/weui.wxss';

view, text, image {
  padding: 0;
  margin: 0;
  border: 0 none;
  color: #1a1a1a;
  outline: none;
  font-family: 'OpenSans', '黑体-简', 'Arial', sans-serif;
  font-size: 14px;
  list-style: none;
}

view, text, label {
  box-sizing: border-box;
}

.clr {
  clear: both;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

input::-webkit-input-placeholder {
  color: #8b8b8b;
}

input::-moz-input-placeholder {
  color: #8b8b8b;
}

input::-ms-input-placeholder {
  color: #8b8b8b;
}

.a, text, navigator {
  text-decoration: none;
  -webkit-transition: all 0.2s;
  -moz-transition: all 0.2s;
  transition: all 0.2s;
}

.nav {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.nav-title {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family: PingFang-SC-Medium;
  font-size: 36rpx;
  letter-spacing: 2px;
}

.nav .back {
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}

.bg-white {
  background-color: #fff;
}

.bg-gray {
  background-color: #f7f7f7;
}

.overflow {
  overflow: auto;
}

.hidden {
  overflow: hidden;
}

.content {
  width: 100%;
  margin-bottom: 142rpx;
}

.h4 {
  font-weight: bold;
}

