.fix_m {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #98979d;
  background: #3cae01;
}

.fix_m .menu {
  height: 56px;
  background: #3cae01;
  width: calc(100% - 20px);
  margin: 0 10px;
  display: flex;
}

.fix_m .menu .li {
  flex: 1;
}

.fix_m .menu .li navigator {
  width: 48px;
  height: 50px;
  display: block;
  margin: 7px auto 0;
  color: #fff;
  padding: 26px 0 0;
  font-size: 12px;
  text-align: center;
}

