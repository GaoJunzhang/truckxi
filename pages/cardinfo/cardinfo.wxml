<form bindsubmit='checkout'>
  <view class="content">
    <view class="edit_pro">
      <view class="pro_cot">
        <view class="list">
          <label>{{content.card_num}}</label>
          <input name="number" type="text" placeholder="1234-1234-1234-1234"></input>
        </view>
        <view class="list">
          <input name="exp_year" type="text" placeholder="{{content.exp_year}} (MM)" class="one"></input>
          <input name="exp_month" type="text" placeholder="{{content.exp_month}} (YY)" class="one"></input>
          <input name="cvv" type="text" placeholder="cvv" class="two"></input>
          <view class="clr"></view>
        </view>
        <!-- <view class="list">
        <checkbox class='a'></checkbox>
        <view class='span'>{{content.save_checkbox}}</view>
      </view> -->
      </view>
    </view>
  </view>
  <view class="btn_save">
    <button class='a' form-type='submit'>
      {{content.submit}}
    </button>
  </view>
</form>