              <image src='http://bluablua.com/icon_rightreturn.png' mode='widthFix' style='width:26rpx'></image>
            </view>
          </view>
        </view>
        <view class="li">
          <view class='a'>
            <label>{{content.phone}}</label>
            <view class='span'>9968xxxxx99</view>
            <view class="irr">
              <image src='http://bluablua.com/icon_rightreturn.png' mode='widthFix' style='width:26rpx'></image>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
