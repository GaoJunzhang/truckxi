        <input type="text" placeholder="Aakash Sirdhana" />
      </view>
      <view class="hook">
        <image src='http://bluablua.com/icon_pro_hook.png' mode='widthFix' style='width:36rpx'></image>
      </view>
      <view class="clr"></view>
      <view class="down">
        <view class="l">{{content.available_balance}}</view>
