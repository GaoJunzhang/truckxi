page {
  background: #f3f3f3;
}

.edit_pro {
  margin: 15px 12px;
}

.edit_pro .pro_cot {
  width: 100%;
  margin: 15px 0;
  padding: 0 12px;
  background: #fff;
  border-radius: 5px;
  border: 1px solid #e0e0e0;
  height: 320px;
}

.edit_pro .pro_cot .list {
  margin: 15px 0 20px;
  position: relative;
}

.edit_pro .pro_cot .list label {
  color: #b2b2b2;
  display: block;
}

.edit_pro .pro_cot .list input {
  display: block;
  margin: 5px 0 0;
  border-bottom: 1px solid #aeaeae;
  padding: 2px 0 5px 0;
  width: 100%;
}

.btn_save {
  position: fixed;
  left: 0;
  right: 0;
  width: 100%;
  margin: auto;
  bottom: 0;
}

.btn_save .a {
  display: block;
  width: 100%;
  color: #fff;
  font-size: 18px;
  text-align: center;
  height: 48px;
  line-height: 48px;
  background: -webkit-linear-gradient(270deg, #37a000, #43c102);
  background: -o-linear-gradient(270deg, #37a000, #43c102);
  background: -moz-linear-gradient(270deg, #37a000, #43c102);
  background: linear-gradient(270deg, #37a000, #43c102);
}

.edit_pro .pro_cot .list checkbox.a {
  float: left;
  padding: 2px 2px 5px 0;
}

.edit_pro .pro_cot .list .i {
  display: block;
  background: url(https://s3-us-west-1.amazonaws.com/scmteambucket/media/wechat/icon_arrowdown.png) center center no-repeat;
  width: 14px;
  height: 12px;
  position: absolute;
  right: 0;
  top: 5px;
}

.edit_pro .pro_cot .list input.one {
  width: 50%;
  float: left;
}

.edit_pro .pro_cot .list input.two {
  width: calc(50% - 10px);
  margin: 5px 0 0 10px;
  float: left;
}

.edit_pro .pro_cot .list input.sa {
  float: left;
  width: 20px;
}

.edit_pro .pro_cot .list input.in {
  width: calc(100% - 20px);
  margin: 0 0 0 20px;
}

.edit_pro .pro_cot .list .span {
  float: left;
  font-size: 12px;
  color: #a6a6a6;
}
