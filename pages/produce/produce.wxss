.content {
  width: 100%;
}

.content .banner {
  width: 100%;
  position: relative;
}

.content .banner image {
  display: block;
  width: 100%;
}

.content .banner .ban {
  width: 100%;
  position: relative;
}

.banner .ban .tx_pro {
  position: absolute;
  bottom: 10px;
  left: 12px;
  font-size: 20px;
  color: #fff;
  padding: 0 50px 0 0;
}

.content .ca {
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  padding: 0 10px;
  height: 54px;
}

.content .ca .ca_li {
  height: 32px;
  display: inline-block;
  overflow-x: auto;
  margin: 12px 6px 12px 0;
}

.content .ca .ca_li .a {
  display: block;
  height: 32px;
  line-height: 32px;
  padding: 0 10px;
  text-align: center;
  color: #333;
  border-bottom: 2px solid #fff;
}

.content .ca .ca_li .a1 {
  display: block;
  height: 32px;
  line-height: 32px;
  padding: 0 10px;
  text-align: center;
  color: #333;
  border-bottom: 2px solid #69ba3e;
}

.content .ca .ca_li .a:hover, ul.tab_c .good_p_li .a.hover {
  border-bottom: 2px solid #69ba3e;
}

.content .gd_h .sm {
  font-size: 12px;
  margin: 5px 10px;
}

.content .gd_h .good_p {
  margin: 0 6px;
}

.content .gd_h .good_p .good_p_li {
  width: calc(50% - 12px);
  float: left;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  margin: 12px 6px;
  display: inline-block;
  overflow-x: auto;
}

.content .gd_h .good_p .good_p_li .a {
  display: block;
  position: relative;
}

.content .gd_h .good_p .good_p_li .a .img_g {
  width: 100%;
  padding: 12px;
}

.content .gd_h .good_p .good_p_li .a .img_g image {
  width: 100%;
  display: block;
}

.content .gd_h .good_p .good_p_li .a .txt_g {
  width: 100%;
  padding: 0 12px;
  position: relative;
}

.content .gd_h .good_p .good_p_li .a .txt_g .span {
  display: block;
  color: #333;
  margin: 2px 0;
}

.content .gd_h .good_p .good_p_li .a .txt_g .pri {
  font-size: 16px;
  color: #ed0000;
}

.content .gd_h .good_p .good_p_li .a .txt_g .sma {
  font-size: 12px;
  margin: 0 0 12px 0;
}

.content .gd_h .good_p .good_p_li .a .txt_g .btn_ad {
  position: absolute;
  right: 12px;
  bottom: 20px;
  width: 48px;
  font-size: 12px;
  text-align: center;
  color: #fff;
  border-radius: 24px;
  height: 24px;
  line-height: 24px;
  background: -webkit-linear-gradient(270deg, #37a000, #43c102);
  background: -o-linear-gradient(270deg, #37a000, #43c102);
  background: -moz-linear-gradient(270deg, #37a000, #43c102);
  background: linear-gradient(270deg, #37a000, #43c102);
}

.content .gd_h .good_p .good_p_li .a .tip_g {
  width: 77px;
  height: 22px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  position: absolute;
  left: -7px;
  top: 15px;
  background: url(http://bluablua.com/icon_tips_f.png) no-repeat;
}

.content .gd_s .tit, .content .gd_h .tit {
  width: calc(100% - 20px);
  margin: 0 10px;
  font-size: 18px;
  font-weight: 400;
  position: relative;
}

.content .gd_s .tit .more, .content .gd_h .tit .more {
  position: absolute;
  right: 0;
  bottom: 2px;
  width: 20px;
}
.content .gd_s .tit .more, .content .gd_h .tit .more1 {
  position: absolute;
  right: 56rpx;
  bottom: 2px;
  width: 20px;
}

.content .gd_s .tit .more image, .content .gd_h .tit .more image {
  display: block;
  width: 20px;
}
.content .gd_s .tit .more image, .content .gd_h .tit .more1 image {
  display: block;
  width: 20px;
}
