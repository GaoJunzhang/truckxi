page {
  background: #f3f3f3;
}

.content {
  width: 100%;
}

.search {
  width: calc(100% - 24px);
  margin: 0 12px;
}

.search .rs {
  display: flex;
  font-size: 16px;
  margin: 15px 0 0;
}

.search .rs .span {
  font-size: 16px;
  color: #3aa700;
}

.search .rs_li {
  width: 100%;
  background: #fff;
  border-radius: 5px;
  border: 1px solid #e0e0e0;
  margin: 10px 0 0;
}

.search .rs_li .li {
  width: 100%;
}

.search .rs_li .li .a {
  color: #333;
  padding: 6px 12px;
  border-bottom: 1px solid #e0e0e0;
}

.search .goods_list {
  display: block;
}

.search .goods_list .li {
  width: 100%;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  margin: 15px 0;
}

.search .goods_list .li .a {
  display: block;
  position: relative;
  background: #fff;
  border-radius: 5px;
}

.search .goods_list .li .a .img_g {
  width: 136px;
  margin: 12px;
  float: left;
}

.search .goods_list .li .a .img_g image {
  width: 136px;
  display: block;
}

.search .goods_list .li .a .txt_g {
  width: calc(100% - 172px);
  margin: 10px 12px 10px 0;
  float: left;
}

.search .goods_list .li .a .txt_g .span {
  display: block;
  color: #333;
  margin: 2px 0;
}

.search .goods_list .li .a .txt_g .pri {
  font-size: 16px;
  color: #ed0000;
}

.search .goods_list .li .a .txt_g .sma {
  font-size: 12px;
  margin: 0 0 12px 0;
}

.search .goods_list .li .a .txt_g .btn_ad {
  width: 48px;
  font-size: 12px;
  text-align: center;
  color: #fff;
  border-radius: 24px;
  height: 24px;
  line-height: 24px;
  background: -webkit-linear-gradient(270deg, #37a000, #43c102);
  background: -o-linear-gradient(270deg, #37a000, #43c102);
  background: -moz-linear-gradient(270deg, #37a000, #43c102);
  background: linear-gradient(270deg, #37a000, #43c102);
}

.search .goods_list .li .a .tip_g {
  width: 77px;
  height: 22px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  position: absolute;
  right: -7px;
  top: 15px;
  background: url(http://bluablua.com/icon_tips.png) no-repeat;
}
