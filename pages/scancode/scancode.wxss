.au {
  width: calc(100% - 24px);
  margin: 12px 12px 0;
}

.au .p {
  font-size: 12px;
  color: #7b7b7b;
  margin: 10px 0;
}

.au .t {
  margin: 15px 0;
}

.qr_code {
  width: calc(100% - 100px);
  margin: 30px 50px;
}

.qr_code image {
  display: block;
  width: 100%;
  padding: 20px;
  box-shadow: 0 0 3px 4px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
}
